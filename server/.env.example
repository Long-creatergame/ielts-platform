# Render Backend Environment Variables
# Copy this file to .env for local development
# For Render, set these in Dashboard â†’ Environment Variables

# Node Environment
NODE_ENV=production

# Server Port (Render sets this automatically, but can override)
PORT=4000

# MongoDB Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ielts-platform?retryWrites=true&w=majority

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=https://ielts-platform-two.vercel.app

# OpenAI API Key (optional, for AI features)
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE

# OpenAI Configuration (optional)
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TEMPERATURE=0.85

# Stripe Keys (optional, for payment)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_PUBLIC_KEY=pk_test_YOUR_STRIPE_PUBLIC_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET_HERE

# Optional: Demo Mode (for testing)
# ENABLE_DEMO_MODE=false
# DEMO_MODE=false

# Optional: AI Fallback Mode
# AI_FALLBACK_MODE=false
