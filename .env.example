# IELTS Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4000
NODE_ENV=production

# MongoDB Connection
MONGO_URL=your_mongo_url_here
# Alternative variable names (also supported):
# MONGO_URI=your_mongo_url_here
# MONGODB_URI=your_mongo_url_here

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=change_this_secret_to_a_long_random_string_in_production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Backend URL (for internal API calls)
BACKEND_URL=https://your-render-backend.onrender.com

# OpenAI API Key (optional - AI features will gracefully degrade if not set)
OPENAI_API_KEY=

# Stripe Configuration (optional - for payment features)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# Email Configuration (optional - for notifications)
SENDGRID_API_KEY=
# OR use SMTP:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# CI/CD Tokens (for health check scripts)
VERCEL_TOKEN=
RENDER_API_KEY=
GITHUB_TOKEN=

# Optional: Test Token (for internal testing)
TEST_TOKEN=

# Optional: Demo Mode
ENABLE_DEMO_MODE=false

# Optional: Run generator on startup
RUN_GENERATOR_ON_STARTUP=false

# Optional: Minimum IELTS items required
MIN_IELTS_ITEMS=50

# Optional: Cron schedule (default: 00:00 UTC daily)
CRON_SCHEDULE=0 0 * * *
