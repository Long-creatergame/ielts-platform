# Vercel Frontend Environment Variables
# Copy this file to .env.local for local development
# For Vercel, set these in Dashboard → Settings → Environment Variables

# Backend API URL (without /api suffix)
VITE_API_BASE_URL=https://ielts-platform-emrv.onrender.com

# Stripe Public Key (Test or Live)
VITE_STRIPE_PUBLIC_KEY=pk_test_YOUR_STRIPE_PUBLIC_KEY_HERE

# Optional: Tawk.to Chat Widget
# VITE_TAWK_PROPERTY_ID=your_tawk_property_id
# VITE_TAWK_WIDGET_ID=your_tawk_widget_id

# Optional: Zalo Contact URL
# VITE_ZALO_URL=https://zalo.me/your_number

# Optional: Demo Mode
# VITE_DEMO_MODE=false
