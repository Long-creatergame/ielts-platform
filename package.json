{
  "name": "ielts-platform",
  "version": "1.0.0",
  "description": "IELTS Platform - Full Stack Application",
  "scripts": {
    "validate:phases": "node scripts/validate-phases.js",
    "validate:system": "node scripts/fullSystemValidation.js",
    "sync:env": "node scripts/autoSyncEnv.js",
    "clear:render": "node scripts/clearRenderCache.js",
    "simulate:cambridge": "node scripts/testCambridgeFlow.js",
    "cleanup:indexes": "node scripts/cleanupIndexes.js",
    "cleanup:imports": "node scripts/cleanupOrphanImports.js",
    "start": "node server/index.js",
    "dev:full": "concurrently \"cd server && npm run dev\" \"cd client && npm run dev\"",
    "dev:server": "cd server && node index.js",
    "dev:client": "cd client && npm run dev",
    "test:api": "cd server && npm install --no-audit --no-fund && npm test",
    "test:e2e": "npx playwright install --with-deps && npx playwright test",
    "test": "npm run test:api && npm run test:e2e",
    "validate:production": "node scripts/validateProduction.js",
    "validate:examflow": "node scripts/validateExamFlow.js",
    "build:all": "cd client && npm run build && cd ../server && echo 'server build step placeholder'",
    "release": "node scripts/releaseVersion.js",
    "test:deploy": "node scripts/testDeployment.js"
  },
  "engines": {
    "node": ">=18.19.0 <21"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
